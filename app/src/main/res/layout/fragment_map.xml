<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_main"
    tools:context=".ui.MapFragment">

    <Button
        android:id="@+id/update_ping"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tracker_button"
        android:text="Ping"
        android:textSize="20sp"
        android:textColor="@color/purple_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tracker_name" />

    <Button
        android:id="@+id/tracker_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/tracker_button"
        android:text="Bella"
        android:textSize="30sp"
        android:textColor="@color/purple_main"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="385dp"
        android:layout_height="385dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/tracker_button"
        android:text="Map Goes Here"
        android:textColor="@color/gold_main"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_ping" />

</androidx.constraintlayout.widget.ConstraintLayout>